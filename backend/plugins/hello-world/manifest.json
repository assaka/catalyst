{
  "name": "Hello World Plugin",
  "slug": "hello-world",
  "version": "1.0.0",
  "description": "A simple plugin that displays a Hello World message on the homepage",
  "author": "Store Owner",
  "category": "display",
  "compatibility": {
    "minVersion": "1.0.0",
    "maxVersion": "2.0.0"
  },
  "dependencies": [],
  "hooks": {
    "homepage_header": "renderHelloWorld",
    "homepage_content": "renderHelloContent"
  },
  "configSchema": {
    "properties": {
      "message": {
        "type": "string",
        "default": "Hello World!",
        "description": "The message to display on the homepage"
      },
      "backgroundColor": {
        "type": "string",
        "default": "#f0f0f0",
        "description": "Background color for the message box"
      },
      "textColor": {
        "type": "string",
        "default": "#333333",
        "description": "Text color for the message"
      },
      "position": {
        "type": "string",
        "enum": ["top", "bottom", "banner"],
        "default": "top",
        "description": "Where to display the message on the homepage"
      },
      "enabled": {
        "type": "boolean",
        "default": true,
        "description": "Enable or disable the hello world message"
      }
    },
    "required": []
  },
  "permissions": [
    "read:homepage",
    "write:content"
  ],
  "routes": [
    {
      "path": "/api/plugins/hello-world/message",
      "method": "GET",
      "handler": "getMessage"
    },
    {
      "path": "/api/plugins/hello-world/message",
      "method": "POST",
      "handler": "updateMessage"
    }
  ],
  "adminNavigation": {
    "enabled": true,
    "label": "Hello World",
    "icon": "Smile",
    "route": "/admin/hello-world",
    "order": 150,
    "parentKey": null,
    "description": "Simple Hello World plugin example"
  }
}