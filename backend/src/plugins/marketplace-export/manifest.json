{
  "name": "Marketplace Export",
  "slug": "marketplace-export",
  "version": "1.0.0",
  "description": "Export your products to external marketplaces like Amazon, eBay, and Etsy",
  "author": "Catalyst Team",
  "category": "marketplace",
  "type": "integration",
  "methods": ["product_export", "marketplace_sync", "inventory_management"],
  "routes": [
    {
      "path": "/marketplace-export",
      "method": "GET",
      "handler": "getMarketplaceExportPage"
    },
    {
      "path": "/api/marketplace-export/amazon",
      "method": "POST", 
      "handler": "exportToAmazon"
    }
  ],
  "permissions": ["export_products", "manage_inventory"],
  "dependencies": [],
  "settings_schema": {
    "type": "object",
    "properties": {
      "amazon_client_id": {
        "type": "string",
        "title": "Amazon Client ID",
        "description": "Your Amazon API Client ID"
      },
      "amazon_client_secret": {
        "type": "string",
        "title": "Amazon Client Secret", 
        "description": "Your Amazon API Client Secret",
        "format": "password"
      },
      "amazon_seller_id": {
        "type": "string",
        "title": "Amazon Seller ID",
        "description": "Your Amazon Seller ID"
      },
      "amazon_marketplace_id": {
        "type": "string",
        "title": "Amazon Marketplace",
        "description": "Target Amazon marketplace",
        "default": "ATVPDKIKX0DER",
        "enum": ["ATVPDKIKX0DER", "A2EUQ1WTGCTBG2", "A1AM78C64UM0Y8"]
      }
    }
  },
  "frontend_routes": [
    {
      "path": "/admin/marketplace-export",
      "component": "MarketplaceExport"
    }
  ],
  "adminNavigation": {
    "enabled": true,
    "label": "Marketplace Export",
    "icon": "Upload",
    "route": "/admin/marketplace-export",
    "order": 85,
    "parentKey": "products",
    "description": "Export products to Amazon, eBay, and Etsy"
  }
}