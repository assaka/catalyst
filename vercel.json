{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",

  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://backend.dainostore.com/api/$1"
    },
    {
      "source": "/robots.txt",
      "destination": "https://backend.dainostore.com/robots.txt"
    },
    {
      "source": "/sitemap.xml",
      "destination": "https://backend.dainostore.com/sitemap.xml"
    },
    {
      "source": "/public/:storeSlug/robots.txt",
      "destination": "https://backend.dainostore.com/public/:storeSlug/robots.txt"
    },
    {
      "source": "/public/:storeSlug/sitemap.xml",
      "destination": "https://backend.dainostore.com/public/:storeSlug/sitemap.xml"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],

  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    },
    {
      "source": "/:path*\\.(jpg|jpeg|png|gif|svg|webp|avif|ico)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/:path*\\.(js|css|woff|woff2|ttf|eot)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Custom-Domain-Support",
          "value": "enabled"
        }
      ]
    }
  ]
}